<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc
						http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
						http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:property-placeholder location="jdbc.properties" />
	
	<!-- <jdbc:embedded-database id="dataSource" type="H2">
		<jdbc:script location="/database-scripts/create-data-model.sql"/>
		<jdbc:script location="/database-scripts/fill-database.sql"/>
	</jdbc:embedded-database> -->
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
		<property name="driverClassName" value="${driver.classname}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.login}" />
		<property name="password" value="${jdbc.password}" />
		<property name="suppressClose" value="true" />
	</bean>
	
	<!-- <jdbc:initialize-database data-source="dataSource">
		<jdbc:script location="classpath:/database-scripts/create-data-model.sql"/>
		<jdbc:script location="classpath:/database-scripts/fill-database.sql"/>
	</jdbc:initialize-database> -->
	
</beans>